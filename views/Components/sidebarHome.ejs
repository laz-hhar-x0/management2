  <hr />

  <!-- قائمة التنقل -->
  <div id="sidebarContent">
    <ul class="nav nav-pills flex-column mb-auto">
      <li>
        <a href="/" onclick="promptCode('../user/add.html', 'addProf')" class="nav-link mb-1 text-white <%= currentPage === 'welcom' ? 'active' : null %>">
